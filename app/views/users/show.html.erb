<div class="user-show-wrapper ">
  <div class="show-container">
    <div class="row">
      <div class="col-md-12">
        <div class="user-info">
            <% if @user.image.attached? %>
            <%= image_tag @user.image %>
            <% end %>
        </div>
        <div class="user-item">
          <h1><%= @user.name %></h1>
          <% if logged_in? %>
            <% if current_user.id == @user.id %>
              <button type="btn" class="btn btn-info"><%= link_to '編集', edit_user_path, class: "text-white" %></button>
              <button type="btn" class="btn btn-danger"><%= link_to '削除', user_path, method: :delete, class: "text-white"%></button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="user-post-title col-md-10">
        　投稿一覧
      </div>
    </div>
    <div class="row user-post-row">
      <% @userposts.each do |post| %>
        <div class="col-md-4 user-post-item">
          <p><b>店名:</b><%= post.name %></p>
          <div class="user-post">
            <%= link_to post_path(post) do %>
              <%= image_tag post.image.url %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pagination">
      <%= paginate @userposts %>
    </div>
  </div>
</div>
