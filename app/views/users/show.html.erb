<div class="user-show-wrapper ">
  <div class="show-container">
    <div class="row">
      <div class="col-md-12">
        <div class="user-info">
            <% if @user.image.attached? %>
            <%= image_tag @user.image %>
            <% end %>
        </div>
        <div class="user-item">
          <h1><%= @user.name %></h1>
          <% if logged_in? %>
            <% if current_user.id == @user.id %>
              <%= link_to '編集', edit_user_path, class: "text-white btn btn-success" %>
              <%= link_to '削除', user_path, method: :delete, data: { confirm: "投稿を削除しますか", cancel: "やめる", commit: "削除する"}, title: "削除確認", class: "text-white btn btn-danger" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="user-post-title col-md-12">
        　投稿一覧
      </div>
    </div>
    <%= render partial: "shared/list", locals: { post: @userposts } %>
    <div class="pagination">
      <%= paginate @userposts %>
    </div>
  </div>
</div>
