<div class="wrapper text-center" >
  <div class="container postnew-container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @post do |f| %>
          <div class="form-grop">
            <%= f.label :image %>
            <%= f.file_field :image, class: 'form-controle' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-controle' %>
          </div>
          <%= f.submit '投稿', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
